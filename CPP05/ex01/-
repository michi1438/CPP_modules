#include "Bureaucrat.hpp"
#include "Form.hpp"

int main()
{
	try
	{
		Form f;
		Form ff("taxe reduction", 5, 2);
		std::cout << ff << std::endl << f << std::endl;
		Bureaucrat b("John", 2);
		std::cout << b;
		Bureaucrat d("Enrique", 150);
		std::cout << d;
		b.signForm(ff);
		d.signForm(f);
	}
	catch (std::exception &e)
	{
		std::cout << e.what() << std::endl;
	}
	return (0);
}
